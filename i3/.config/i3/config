set $mod Mod4

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Tokyo Night color scheme
set $bg-color            #1a1b26
set $inactive-bg-color   #1a1b26
set $text-color          #c0caf5
set $inactive-text-color #565f89
set $urgent-bg-color     #f7768e
set $indicator-color     #bb9af7
set $separator-color     #414868

# Additional Tokyo Night colors
set $blue                #7aa2f7
set $purple              #9d7cd8
set $cyan                #7dcfff
set $green               #9ece6a
set $yellow              #e0af68
set $orange              #ff9e64
set $red                 #f7768e
set $magenta             #bb9af7

#####################
# Workspace config  #
#####################

# Define names for default workspaces
workspace $ws1 output primary
workspace $ws2 output primary
workspace $ws3 output primary
workspace $ws4 output primary
workspace $ws5 output primary
workspace $ws6 output primary
workspace $ws7 output primary
workspace $ws8 output primary
workspace $ws9 output primary
workspace $ws10 output primary

#####################
# Font & Appearance #
#####################

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:JetBrains Mono 10

# Window appearance
default_border pixel 2
default_floating_border pixel 2
hide_edge_borders none

# Gaps configuration
gaps inner 14
gaps outer 7

# Only enable gaps on a workspace when there is at least one container
smart_gaps off

# Window colors
#                       border              background         text                 indicator            child_border
client.focused          $blue               $blue              $bg-color            $blue                $blue
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color $inactive-bg-color   $inactive-bg-color
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color $inactive-bg-color   $inactive-bg-color
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          $urgent-bg-color     $urgent-bg-color
client.placeholder      #000000             #0c0c0c            #ffffff              #000000              #0c0c0c

#####################
# Autostart         #
#####################

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3

# Set GTK theme environment variables
exec_always --no-startup-id xsettingsd &

# Set wallpaper with dynamic adjustment
exec_always --no-startup-id ~/.config/i3/scripts/update-wallpaper.sh &

# Picom compositor for transparency and effects
exec_always --no-startup-id picom --config ~/.config/picom/picom.conf

# Status bar selection (polybar or i3blocks)
exec_always --no-startup-id ~/.config/i3/scripts/switch-statusbar.sh start

# System tray applications
exec --no-startup-id nm-applet
exec --no-startup-id blueman-applet
exec --no-startup-id dunst
exec --no-startup-id redshift-gtk

# Clipboard manager
exec --no-startup-id clipit

# Auto display management
exec_always --no-startup-id ~/.config/i3/scripts/auto-display.sh &

# Auto-lock screen (5 minute timeout)
exec --no-startup-id xautolock -time 5 -locker "~/.config/i3/scripts/lock-screen.sh" &
exec --no-startup-id xss-lock --transfer-sleep-lock -- ~/.config/i3/scripts/lock-screen.sh

# Audio control (pavucontrol - commented out as it opens volume control window automatically)
# exec --no-startup-id pavucontrol --tab=3

# Auto-start applications
exec --no-startup-id brave
exec --no-startup-id alacritty
exec --no-startup-id /opt/pulsesecure/bin/pulseUI
exec --no-startup-id teams-for-linux
exec --no-startup-id firefox
exec --no-startup-id spotify
exec --no-startup-id nautilus
exec --no-startup-id nordvpn connect && notify-send "Connected to VPN" -t 1500

# Autotiling (automatic split direction)
exec_always --no-startup-id autotiling

# Monitor configuration - use external only if connected, otherwise laptop screen
exec_always --no-startup-id "if xrandr | grep 'HDMI-1 connected'; then xrandr --output HDMI-1 --mode 2560x1440 --primary --output eDP-1 --off; else xrandr --output eDP-1 --mode 1920x1080 --primary --output HDMI-1 --off; fi"

#####################
# Key Bindings      #
#####################

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec --no-startup-id alacritty

# kill focused window
bindsym $mod+Shift+q kill

# start rofi (a program launcher)
bindsym $mod+d exec --no-startup-id rofi -show drun -show-icons -theme ~/.config/rofi/tokyo-night.rasi
bindsym $mod+Tab exec --no-startup-id rofi -show window -show-icons -theme ~/.config/rofi/tokyo-night.rasi

# File manager
bindsym $mod+e exec --no-startup-id thunar

# Screenshots
bindsym Print exec --no-startup-id flameshot gui
bindsym $mod+Print exec --no-startup-id flameshot full -p ~/Pictures/Screenshots/

# Media keys
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Brightness control
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10

# Transparency toggle
bindsym $mod+shift+t exec --no-startup-id ~/.config/i3/transparency.sh

# Media player controls
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

#####################
# Navigation        #
#####################

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+t layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

