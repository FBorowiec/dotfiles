#####################
# System Controls   #
#####################

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Lock screen
bindsym $mod+shift+x exec --no-startup-id ~/.config/i3/scripts/lock-screen.sh

# System menus
bindsym $mod+Shift+p exec --no-startup-id ~/.config/i3/scripts/power-menu.sh
bindsym $mod+Shift+b exec --no-startup-id ~/.config/i3/scripts/bluetooth-menu.sh
bindsym $mod+Shift+a exec --no-startup-id ~/.config/i3/scripts/audio-menu.sh
bindsym $mod+Shift+d exec --no-startup-id ~/.config/i3/scripts/display-menu.sh

#####################
# Resize Mode       #
#####################

mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window's width.
        # Pressing right will grow the window's width.
        # Pressing up will shrink the window's height.
        # Pressing down will grow the window's height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

#####################
# Status Bar        #
#####################

# Status bar configuration for i3blocks
bar {
    id bar-main
    status_command i3blocks -c ~/.config/i3blocks/config
    position top
    height 26

    # Tokyo Night colors
    colors {
        background #1a1b26
        statusline #c0caf5
        separator #414868

        # workspace colors
        focused_workspace  #7aa2f7 #7aa2f7 #1a1b26
        active_workspace   #414868 #414868 #c0caf5
        inactive_workspace #1a1b26 #1a1b26 #565f89
        urgent_workspace   #f7768e #f7768e #c0caf5
    }

    font pango:JetBrains Mono, FontAwesome, Font Awesome 6 Free 10

    # Workspace buttons and mouse support
    workspace_buttons yes
    strip_workspace_numbers no
    binding_mode_indicator yes
}

# Keybinding to switch between status bars
bindsym $mod+Shift+s exec --no-startup-id ~/.config/i3/scripts/switch-statusbar.sh toggle && notify-send "Status Bar" "Switched status bar" -t 2000

#####################
# Gaps Controls     #
#####################

# Gaps modification
bindsym $mod+plus gaps inner current plus 5
bindsym $mod+minus gaps inner current minus 5
bindsym $mod+Shift+plus gaps outer current plus 5
bindsym $mod+Shift+minus gaps outer current minus 5

# Reset gaps
bindsym $mod+Shift+g gaps inner current set 8; gaps outer current set 4

# Toggle gaps
bindsym $mod+g exec --no-startup-id "if [ $(i3-msg -t get_tree | jq '.nodes[].nodes[].nodes[] | select(.focused==true) | .gaps.inner') -eq 0 ]; then i3-msg gaps inner current set 8; i3-msg gaps outer current set 4; else i3-msg gaps inner current set 0; i3-msg gaps outer current set 0; fi"

